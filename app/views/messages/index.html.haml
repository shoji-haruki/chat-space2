.content
  = render 'side_bar'





  .content__message
    .content__message__header
      .content__message__header__box
        %h2.content__message__header__box__current-group
          test-group
        %ul.content__message__header__box__member-list
          Member:
          .content__message__header__box__member-list__member
          bさん
      = link_to "#" do
        .content__message__header__link__edit-btn Edit
    .content__message__main
      = render 'message'
      = render 'message'
      = render 'message'
    .content__message__form
      %form{:action => "form_path", :method => "post"}
        .content__message__form__main-form__input-box
          %input{:name => "massage", :type => "text", :placeholder => "type a message"}

          %label.content__message__form__main-form__input-box__image{:for => "message-image"}
            =fa_icon "image"
            / %i.fa.fa-image
            %input#message-image.content__message__form__main-form__input-box__image__file{:name => "message[image]", :type => "file"}/
        %input.content__message__form__main-form__submit-btn{:name => "commit", :type => "submit", "data-disable-with" => "Send", :value => "Send"}/
